{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["./src/components/*"],
      "@utils/*": ["./src/utils/*"],
      "@resources/*": ["./src/resources/*"],
      "@routes/*": ["./src/routes/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@services/*": ["./src/services/*"],
      "@atoms/*": ["src/stores/*"],
      "@typedefs/*": ["./src/typedefs/*"],
    }
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*"]
}
